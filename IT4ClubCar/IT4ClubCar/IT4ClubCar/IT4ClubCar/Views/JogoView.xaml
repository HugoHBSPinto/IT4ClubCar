<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT4ClubCar.IT4ClubCar.Views.JogoView"
             xmlns:vml="clr-namespace:IT4ClubCar.IT4ClubCar.ViewModels.Base"
             vml:ViewModelLocator.DefinirViewModelAutomaticamente="True">
    <ContentPage.Content>
        <Grid RowSpacing="0" ColumnSpacing="0">
            <!--region Column and row definition -->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <!--endregion -->
            <!-- Titulo -->
            <StackLayout Grid.Column="0" Grid.Row="0" BackgroundColor="Black">
                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="{Binding Jogo.Campo.Nome}" FontSize="40" TextColor="#CCCCCC"/>
            </StackLayout>
            
            <!-- Tabs -->
            <Grid Grid.Column="0" Grid.Row="1" ColumnSpacing="0.5" BackgroundColor="Black">
                <!--region Column and Row Definition -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--endregion -->
                <Label Grid.Column="0" Grid.Row="0" BackgroundColor="White" TextColor="Black" Text="Stroke Input" VerticalTextAlignment="Center" HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding DefinirPontuacoesCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Column="1" Grid.Row="0" BackgroundColor="White" TextColor="Black" Text="Pro Tip" VerticalTextAlignment="Center" HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding VerProTipCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Column="2" Grid.Row="0" BackgroundColor="White" TextColor="Black" Text="Scorecard" VerticalTextAlignment="Center" HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding VerScorecardCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <!-- Mapa -->
            <Grid Grid.Column="0" Grid.Row="2"/>

            <!-- Barra Inferior -->
            <Grid Grid.Column="0" Grid.Row="3">
                <!--region Column and Row Definitions-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--endregion -->
                <!-- Icon BuggyCar -->
                <StackLayout Grid.Column="0" Grid.Row="0" BackgroundColor="Black">
                    <Image HorizontalOptions="StartAndExpand" Source="IconBuggyBar.png"/>
                </StackLayout>
                
                <!-- Informações Buraco -->
                <Grid Grid.Column="1" Grid.Row="0" ColumnSpacing="0" BackgroundColor="White">
                    <!--region Column and Row Definitions -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--endregion -->
                    <Image Grid.Column="0" Grid.Row="0" Source="IconLeftArrow.png" VerticalOptions="Fill" HorizontalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IrBuracoAnteriorCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Grid.Column="1" Grid.Row="0" Text="{Binding BuracoAtual.Numero}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <Label Grid.Column="2" Grid.Row="0" Text="{Binding BuracoAtual.Par}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <Label Grid.Column="3" Grid.Row="0" Text="{Binding BuracoAtual.StrokeIndex}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <Image Grid.Column="4" Grid.Row="0" Source="IconRightArrow.png" HeightRequest="60">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IrBuracoSeguinteCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                
                <!-- Icon Menu -->
                <StackLayout Grid.Column="2" Grid.Row="0" BackgroundColor="Black">
                    <Image HorizontalOptions="EndAndExpand" Source="IconMenu.png"/>
                </StackLayout>
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>